                @Html.EditorFor(model => model.MaxDaysOfRental, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaxDaysOfRental, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MaxAmountOfBooks, htmlAttributes: new { @class = "control-label col-md-2" })
