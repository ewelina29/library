@model IEnumerable<Biblioteka.ModelViews.CopiesStatusesModelView>

@{
    ViewBag.Title = "Index";
}

<div class="header-title">All reservations</div>

@{
    if (Model.Count() != 0)
    {
        <table class="table">
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.CopyId)
                </th>
                <th>

                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Reader)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateFrom)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateTo)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.CopyId)
                    </td>
                    <td>
                        @Html.ActionLink(item.Title, "Details/" + item.BookId, "Book", null, new { @class = "redirect-button" })
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Reader)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateFrom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateTo)
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "DeleteReservation", new { id = item.Id }, new { @class = "redirect-button" }) |
                        @Html.ActionLink("Rent", "Add", "Rental", new { reservationId = item.Id }, new { @class = "redirect-button" })


                    </td>
                </tr>
            }

        </table>

    }
    else
    {
        <hr />
        <p class="empty-data-table"> There's no current reservations</p>
    }
}
