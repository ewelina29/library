@model IEnumerable<Biblioteka.Models.Category>
@using Biblioteka.Models.Identity;


@{
    ViewBag.Title = "Index";
}

<div class="header-title">All categories</div>
@{
    if (@ViewBag.Role == UserRole.EMPLOYEE_ROLE)
    {
        <p>
            @Html.ActionLink("Create new", "Create", null, new { @class = "redirect-button" })
        </p>
    }
}

<table class="table ">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td class="icon-td">
            <a href="@Url.Action("Delete", "Category", new {id = item.Id})">

                <img src="~/images/remove.png" class="link-img" />
            </a>
        </td>
        <td></td>
    </tr>
}

</table>


   

