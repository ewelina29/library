@model IEnumerable<Biblioteka.ModelViews.CopiesStatusesModelView>

@{
    ViewBag.Title = "UserPendings";
}

<table class="col-md-12">
    <tr>
        <td class="col-md-2" style="margin:10px">
            <ul class="nav nav-pills nav-stacked ">
                <li><a class="redirect-button" href="/Reservation/UserReservations">Reservations</a></li>
                <li><a class="redirect-button" href="/Rental/UserRentals">Rentals</a></li>
                <li class="active"><a href="/Pending/UserPendings">Pendings</a></li>
                <li ><a class="redirect-button" href="/Rental/History">History rentals</a></li>
                <li><a class="redirect-button" href="/Fine/UserFines">Fines</a></li>

            </ul>
        </td>
        <td class="col-md-10" style="margin:10px">
            <h2>Your pending books</h2>
            @{
                if (Model.Count() != 0)
                {
                    <table class="table ">
                        <tr>

                            <th>
                                @Html.DisplayNameFor(model => model.Title)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DateFrom)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DateTo)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                {
                            <tr>

                                <td>
                                    @Html.ActionLink(item.Title, "Details/" + item.BookId, "Book", null, new { @class = "redirect-button" })
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateFrom)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateTo)
                                </td>
                                <td>
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "redirect-button" })
                                </td>
                            </tr>
                        }

                    </table>
                }
                else
                {
                    <hr/>
                    <p class="empty-data-table"> You don't have any pendings</p>
                        @Html.ActionLink("Go to book catalog", "Index", "Book", null, new { @class = "redirect-button" })
                }

            }
           
        </td>
    </tr>
</table>